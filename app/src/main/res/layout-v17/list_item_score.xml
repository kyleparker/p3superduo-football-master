<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/score_card_height"
        app:cardBackgroundColor="@color/background_content"
        app:cardCornerRadius="@dimen/cardview_corner_radius"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/body_padding_large"
                android:layout_marginLeft="@dimen/body_padding_large"
                android:layout_marginRight="@dimen/body_padding_large"
                android:layout_marginStart="@dimen/body_padding_large"
                android:layout_marginTop="@dimen/body_padding_large"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/home_crest"
                    android:layout_width="@dimen/crest_image_width"
                    android:layout_height="@dimen/crest_image_height"
                    android:layout_gravity="start|left"
                    android:contentDescription="@string/content_crest"/>

                <TextView
                    android:id="@+id/home_name"
                    style="@style/TextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/crest_image_width"
                    android:layout_marginStart="@dimen/crest_image_width"
                    android:paddingLeft="@dimen/body_padding_medium"
                    android:paddingStart="@dimen/body_padding_medium"/>

                <TextView
                    android:id="@+id/home_score"
                    style="@style/TextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end|right"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/body_padding_large"
                android:layout_marginLeft="@dimen/body_padding_large"
                android:layout_marginRight="@dimen/body_padding_large"
                android:layout_marginStart="@dimen/body_padding_large"
                android:layout_marginTop="@dimen/body_padding_small">

                <ImageView
                    android:id="@+id/away_crest"
                    android:layout_width="@dimen/crest_image_width"
                    android:layout_height="@dimen/crest_image_height"
                    android:layout_gravity="start|left"
                    android:contentDescription="@string/content_crest"/>

                <TextView
                    android:id="@+id/away_name"
                    style="@style/TextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/crest_image_width"
                    android:layout_marginStart="@dimen/crest_image_width"
                    android:paddingLeft="@dimen/body_padding_medium"
                    android:paddingStart="@dimen/body_padding_medium"/>

                <TextView
                    android:id="@+id/away_score"
                    style="@style/TextMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end|right"/>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/body_padding_large"
                    android:layout_marginEnd="@dimen/body_padding_large"
                    android:layout_marginLeft="@dimen/body_padding_large"
                    android:layout_marginRight="@dimen/body_padding_large"
                    android:layout_marginStart="@dimen/body_padding_large"
                    android:layout_marginTop="@dimen/body_padding_medium"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/match_day"
                        style="@style/TextSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/body_padding_small"/>

                    <TextView
                        android:id="@+id/date"
                        style="@style/TextSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/overflow_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/body_padding_small"
                    android:paddingEnd="@dimen/body_padding_small"
                    android:background="@drawable/ic_menu_overflow_card_dark"
                    android:contentDescription="@string/action_overflow"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>


