<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_window"
    android:orientation="vertical"
    android:paddingBottom="@dimen/keyline_1_half"
    android:paddingLeft="@dimen/margin_card_layout"
    android:paddingTop="@dimen/keyline_1_half"
    app:slm_headerDisplay="inline|sticky"
    app:slm_isHeader="true"
    app:slm_section_headerMarginStart="56dip">

    <TextView
        android:id="@+id/header"
        style="@style/TextMedium.Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="@dimen/keyline_1"/>

</LinearLayout>