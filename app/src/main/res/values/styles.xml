<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/theme_accent</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="actionBarIconColor">@color/text_light</item>
        <item name="actionBarInsetStart">@dimen/keyline_1</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <!-- Intermediary theme for SessionDetails (so we can override it on large screens) -->
    <style name="AppTheme.FloatingWindow.Base" parent="AppTheme">
        <item name="isFloatingWindow">false</item>
    </style>

    <style name="AppTheme.FloatingWindow" parent="AppTheme.FloatingWindow.Base" />

    <style name="ActionBarThemeOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="actionMenuTextColor">@color/text_light</item>
        <item name="colorControlNormal">?actionBarIconColor</item>
        <item name="colorControlHighlight">#66ffffff</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BaseParentText">
        <item name="android:textColorHighlight">@color/text_highlight</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textColorLink">@color/text_link</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:layout_alignWithParentIfMissing">true</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="TextMedium" parent="@style/BaseParentText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:autoLink">web|email</item>
    </style>

    <style name="TextMedium.EmptyList">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextMedium.Header">
        <item name="android:autoLink">none</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextSmall" parent="@style/BaseParentText">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="CardText" />

    <style name="CardText.Title" parent="@style/TextMedium">
        <item name="android:autoLink">none</item>
    </style>

    <style name="CardText.SubTitle" parent="@style/TextMedium">
        <item name="android:autoLink">none</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="CardText.SubTitle.Small" parent="@style/TextSmall">
        <item name="android:autoLink">none</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_accent</item>
    </style>

</resources>
